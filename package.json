{
  "name": "@axiomatic-design/color",
  "version": "0.1.0",
  "description": "An Axiomatic approach to color. Automated contrast, platform-native adaptation, and mathematically guaranteed accessibility.",
  "keywords": [
    "color",
    "design-system",
    "theming",
    "contrast",
    "accessibility",
    "oklch",
    "axiomatic"
  ],
  "author": "Yehuda Katz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/design-axioms/color.git"
  },
  "bugs": {
    "url": "https://github.com/design-axioms/color/issues"
  },
  "homepage": "https://design-axioms.github.io/color/",
  "type": "module",
  "files": [
    "dist",
    "css",
    "src",
    "color-config.schema.json"
  ],
  "scripts": {
    "solve": "node src/cli/index.ts scripts/surface-lightness.config.json css/theme.css",
    "audit:theme": "node src/cli/index.ts audit",
    "sketch": "node scripts/lightness-lut-sketch.ts",
    "build": "tsup && pnpm schema",
    "schema": "ts-json-schema-generator --path 'src/lib/types.ts' --type 'SolverConfig' --out 'color-config.schema.json'",
    "prepublishOnly": "pnpm test && pnpm build",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --run",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write",
    "lint:security": "node scripts/check-security.ts",
    "docs:dev": "pnpm --filter site dev",
    "docs:build": "pnpm --filter site build",
    "dev:site": "pnpm docs:dev & pnpm --filter demo dev",
    "build:site": "node scripts/build-site.ts",
    "check:exports": "publint"
  },
  "exports": {
    ".": "./dist/lib/index.js",
    "./math": "./dist/lib/math.js",
    "./generator": "./dist/lib/generator.js",
    "./runtime": "./dist/lib/runtime.js",
    "./types": "./dist/lib/types.js",
    "./constants": "./dist/lib/constants.js",
    "./browser": "./dist/lib/browser.js",
    "./engine.css": "./css/engine.css",
    "./utilities.css": "./css/utilities.css",
    "./theme.css": "./css/theme.css"
  },
  "bin": {
    "axiomatic": "./dist/cli/index.js"
  },
  "dependencies": {
    "apca-w3": "^0.1.9",
    "culori": "^4.0.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/apca-w3": "^0.1.3",
    "@types/culori": "^4.0.1",
    "@types/http-proxy": "^1.17.17",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "eslint": "^9.39.1",
    "glob": "^13.0.0",
    "http-proxy": "^1.18.1",
    "knip": "^5.71.0",
    "lefthook": "^2.0.4",
    "playwright": "^1.57.0",
    "prettier": "^3.7.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.4.0",
    "publint": "^0.3.15",
    "release-plan": "^0.17.0",
    "ts-json-schema-generator": "^2.4.0",
    "tsup": "^8.5.1",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": "^24.0.0"
  }
}
