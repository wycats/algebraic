{
  "name": "@axiomatic-design/color",
  "version": "0.1.0",
  "description": "An Axiomatic approach to color. Automated contrast, platform-native adaptation, and mathematically guaranteed accessibility.",
  "keywords": [
    "color",
    "design-system",
    "theming",
    "contrast",
    "accessibility",
    "oklch",
    "axiomatic"
  ],
  "author": "Yehuda Katz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/design-axioms/color.git"
  },
  "bugs": {
    "url": "https://github.com/design-axioms/color/issues"
  },
  "homepage": "https://design-axioms.github.io/color/",
  "type": "module",
  "files": [
    "dist",
    "css",
    "src",
    "color-config.schema.json"
  ],
  "scripts": {
    "solve": "node src/cli/index.ts color-config.json css/theme.css",
    "audit:theme": "node src/cli/index.ts audit",
    "sketch": "node scripts/lightness-lut-sketch.ts",
    "build": "tsup && pnpm schema && pnpm build:css",
    "build:css": "node scripts/build-css.ts",
    "schema": "ts-json-schema-generator --path 'src/lib/types.ts' --type 'UserConfig' --out 'color-config.schema.json'",
    "prepack": "pnpm build",
    "prepublishOnly": "pnpm test && pnpm build",
    "test": "vitest --run",
    "test:update-snapshots": "vitest -u --run",
    "test:visual": "playwright test tests/visual.spec.ts",
    "test:visual:update": "playwright test tests/visual.spec.ts --update-snapshots",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write",
    "lint:security": "node scripts/check-security.ts",
    "lint:tokens": "./scripts/check-tokens.sh",
    "lint:math": "node scripts/check-math.ts",
    "lint:all": "pnpm lint && pnpm lint:security && pnpm lint:tokens && pnpm lint:math",
    "docs:dev": "pnpm --filter site dev",
    "docs:build": "pnpm --filter site build",
    "dev:site": "pnpm docs:dev & pnpm --filter demo dev",
    "build:site": "node scripts/build-site.ts",
    "check:exports": "publint",
    "vendor:update": "node scripts/update-vendor.ts"
  },
  "exports": {
    ".": "./dist/lib/index.js",
    "./math": "./dist/lib/math.js",
    "./generator": "./dist/lib/generator.js",
    "./runtime": "./dist/lib/runtime.js",
    "./types": "./dist/lib/types.js",
    "./constants": "./dist/lib/constants.js",
    "./browser": "./dist/lib/browser.js",
    "./utilities": "./dist/lib/utilities.js",
    "./inspector": "./dist/lib/inspector/index.js",
    "./style.css": "./dist/style.css",
    "./engine.css": "./css/engine.css",
    "./theme.css": "./css/theme.css"
  },
  "bin": {
    "axiomatic": "./dist/cli/index.js"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "apca-w3": "^0.1.9",
    "culori": "^4.0.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@glimmer/env": "^0.1.7",
    "@playwright/test": "^1.57.0",
    "@types/apca-w3": "^0.1.3",
    "@types/culori": "^4.0.1",
    "@types/http-proxy": "^1.17.17",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "astro-eslint-parser": "^1.2.2",
    "ember-eslint-parser": "^0.5.13",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-svelte": "^3.13.0",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "http-proxy": "^1.18.1",
    "knip": "^5.71.0",
    "lefthook": "^2.0.4",
    "lightningcss": "^1.30.2",
    "playwright": "^1.57.0",
    "prettier": "^3.7.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.4.0",
    "publint": "^0.3.15",
    "release-plan": "^0.17.0",
    "svelte-eslint-parser": "^1.4.0",
    "ts-json-schema-generator": "^2.4.0",
    "tsup": "^8.5.1",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14",
    "vue-eslint-parser": "^10.2.0"
  },
  "engines": {
    "node": "^24.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
