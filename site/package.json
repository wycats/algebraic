{
  "name": "site",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm generate:theme && astro dev",
    "start": "astro dev",
    "generate:theme": "pnpm exec color-system color-config.json src/styles/theme.css",
    "build": "pnpm generate:theme && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint:colors": "if grep -rE \"#[0-9a-fA-F]{3,6}|rgb\\(|hsl\\(\" src/components src/content/docs | grep -v \"theme.css\"; then echo \"Error: Hardcoded colors found\"; exit 1; else echo \"No hardcoded colors found\"; exit 0; fi"
  },
  "dependencies": {
    "@astrojs/preact": "^4.1.3",
    "@astrojs/starlight": "^0.36.3",
    "astro": "^5.6.1",
    "color-system": "workspace:*",
    "preact": "^10.27.2",
    "sharp": "^0.34.2"
  }
}
