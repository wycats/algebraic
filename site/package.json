{
  "name": "site",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm generate:theme && astro dev",
    "start": "astro dev",
    "generate:theme": "pnpm exec color-system color-config.json src/styles/theme.css",
    "build": "pnpm generate:theme && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint:colors": "if grep -rE \"#[0-9a-fA-F]{3,6}|rgb\\(|hsl\\(\" src/components src/content/docs | grep -v \"theme.css\"; then echo \"Error: Hardcoded colors found\"; exit 1; else echo \"No hardcoded colors found\"; exit 0; fi"
  },
  "dependencies": {
    "@algebraic-systems/color-system": "workspace:*",
    "@astrojs/check": "^0.9.6",
    "@astrojs/preact": "^4.1.3",
    "@astrojs/starlight": "^0.36.3",
    "@astrojs/svelte": "^7.2.2",
    "apca-w3": "^0.1.9",
    "astro": "^5.6.1",
    "culori": "^4.0.2",
    "lucide-preact": "^0.555.0",
    "preact": "^10.27.2",
    "sharp": "^0.34.2",
    "svelte": "^5.45.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@fontsource-variable/space-grotesk": "^5.2.10",
    "rehype-mathjax": "^7.1.0",
    "remark-math": "^6.0.0"
  }
}
